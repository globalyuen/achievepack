{
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "target": "ES2022",
        "lib": [
            "ES2023"
        ],
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "api/**/*"
    ]
}